<% include partials/_header %>

<section class="content-container">
  <% if (!id) {%>
    <span class="default-link">
      Please <a href="/login">login</a> to see your URLs.
    </span>
  <%} else {%>
    <div class="content-urls--headers">
      <h3>Short URL: Long URL</h3>
      <h3>Actions</h3>
    </div>

    <div class="content-urls">
      <% for (let url in urls) { %>
        <span class="url-info">
          <%= url + ': ' + urls[url].url %>
        </span>

        <div class="content-urls--actions">
          <span class="url-edit">
            <a href="/urls/<%= url %>">Edit</a>
          </span>

          <span class="url-delete">
            <form method="POST" action="/urls/<%= url %>?_method=DELETE">
              <input type="submit" value="Delete">
            </form>
          </span>
        </div>
      <% } %>
    </div>

    <span class="default-link">
      <a href="/urls/new">Shorten New URL</a>
    </span>
  <% } %>
</section>

<% include partials/_footer %>
